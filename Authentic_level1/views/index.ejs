<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Login Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body, html {
            height: 100%;
        }
        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .content {
            flex: 1;
        }
        body.dark-mode {
            background-color: #8c8c8c;
            color: #ffffff;
        }
        body.dark-mode .btn {
            border-color: #ffffff;
        }
        .custom-header {
            background-color: #01264f; /* Custom blue color */
            color: #ffffff;
        }
        .custom-footer {
            background-color: #001834; /* Custom grey color */
            color: #ffffff;
        }
        footer a {
            color: inherit;
        }
        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <%- include("partials/header.ejs") %>      
        <main class="content d-flex justify-content-center align-items-center">
            <div class="text-center">
                <%- include("partials/login.ejs") %>           
                <%- include("partials/register.ejs") %>           
                <button type="button" class="btn btn-primary btn-lg m-2" data-bs-toggle="modal" data-bs-target="#loginModal">Log In</button>
                <button type="button" class="btn btn-secondary btn-lg m-2" data-bs-toggle="modal" data-bs-target="#registerModal">Register</button>
                <a href="/auth/google" class="btn btn-danger btn-lg m-2">Log In with Google</a>
            </div>
        </main>
        <%- include("partials/footer.ejs") %>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        document.getElementById('darkModeSwitch').addEventListener('change', function() {
            if (this.checked) {
                document.body.classList.add('dark-mode');
            } else {
                document.body.classList.remove('dark-mode');
            }
        });
    </script>
</body>
</html>
