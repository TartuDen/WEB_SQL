<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= thread.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('parts/header.ejs') %>
  <div class="container my-5">
    <h1 class="mb-4"><%= thread.title %></h1>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Genre</th>
          <th scope="col">Author</th>
          <th scope="col">Created</th>
          <th scope="col">Likes</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= thread.title %></td>
          <td><%= thread.genre %></td>
          <td><%= thread.author %></td>
          <td><%= new Date(thread.created).toLocaleDateString() %></td>
          <td><%= thread.likes.like %> / <%= thread.likes.dislike %></td>
        </tr>
        <tr>
          <td colspan="5"><%=thread.content %></td>
        </tr>
      </tbody>
    </table>
    <h2 class="mt-5">Posts</h2>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Author</th>
          <th scope="col">Content</th>
          <th scope="col">Created</th>
        </tr>
      </thead>
      <tbody>
        <% if (locals.postsFromThread){ %>
          <% if (postsFromThread && postsFromThread.length) { %>
            <% postsFromThread.forEach(post => { %>
              <tr>
                <td><%= post.author %></td>
                <td><%= post.content %></td>
                <td><%= new Date(post.created).toLocaleDateString() %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3">No posts found.</td>
            </tr>
          <% } %>
        <% } %>
      </tbody>
    </table>
    <a href="/" class="btn btn-primary mt-3">Back to Threads</a>
  </div>
  <%- include('parts/footer.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
