      <!-- Modal ADD NEW POST -->
      <div
        class="modal fade"
        id="addPostModal"
        tabindex="-1"
        aria-labelledby="addPostModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addPostModalLabel">
                <%= user.user_name %> - Add New Post
              </h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <form id="addPostForm" method="post" action="/add_post">
                <input
                  type="hidden"
                  name="threadId"
                  value="<%= thread.thread_id %>"
                />
                <div class="mb-3">
                  <label for="postContent" class="form-label">Content</label>
                  <textarea
                    name="content"
                    class="form-control"
                    id="postContent"
                    rows="3"
                    required
                  ></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post</button>
              </form>
            </div>
          </div>
        </div>
      </div>